/ {
    model = "CareLoop Health Monitor";
    
    aliases {
        led0 = &led0;  /* Red LED */
        led1 = &led1;  /* Green LED */
        led2 = &led2;  /* Blue LED */
        sw0 = &button0;
    };

    leds {
        compatible = "gpio-leds";
        led0: led_0 {
            gpios = <&gpio0 13 GPIO_ACTIVE_LOW>;
            label = "Red LED";
        };
        led1: led_1 {
            gpios = <&gpio0 14 GPIO_ACTIVE_LOW>;
            label = "Green LED";
        };
        led2: led_2 {
            gpios = <&gpio0 15 GPIO_ACTIVE_LOW>;
            label = "Blue LED";
        };
    };

    buttons {
        compatible = "gpio-keys";
        button0: button_0 {
            gpios = <&gpio0 11 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
            label = "Push button switch 0";
        };
    };

    /* Power supply configuration */
    vbatt {
        compatible = "voltage-divider";
        io-channels = <&adc 0>;
        output-ohms = <100000>;
        full-ohms = <(100000 + 100000)>;
    };
};

&i2c0 {
    compatible = "nordic,nrf-twi";
    status = "okay";
    clock-frequency = <I2C_BITRATE_FAST>;

    /* MAX30102 Heart Rate Sensor */
    max30102: max30102@57 {
        compatible = "maxim,max30102";
        reg = <0x57>;
        label = "MAX30102";
        status = "okay";
        
        /* Driver configuration properties */
        sample-rate = <100>;        /* 100 Hz sampling */
        led-current-red = <63>;     /* 0x3F = ~27mA */
        led-current-ir = <63>;      /* 0x3F = ~27mA */
        adc-range = <4096>;         /* 4096 nA range */
        pulse-width = <411>;        /* 411 Î¼s pulse width */
    };

    /* MPU6050 Accelerometer/Gyroscope */
    mpu6050@68 {
        compatible = "invensense,mpu6050";
        reg = <0x68>;
        label = "MPU6050";
    };
};

&adc {
    status = "okay";
    #address-cells = <1>;
    #size-cells = <0>;

    channel@0 {
        reg = <0>;
        zephyr,gain = "ADC_GAIN_1_6";
        zephyr,reference = "ADC_REF_INTERNAL";
        zephyr,acquisition-time = <ADC_ACQ_TIME_DEFAULT>;
        zephyr,input-positive = <NRF_SAADC_VDD>;
        zephyr,resolution = <12>;
    };
};
